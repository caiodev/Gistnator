<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewStyle" parent="AppTheme">
        <item name="android:layout_marginStart">@dimen/margin_8dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/gist_info_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="TextViewStyleWhite" parent="TextViewStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MarginViewStyle" parent="AppTheme">
        <item name="android:layout_marginLeft">@dimen/margin_8dp</item>
        <item name="android:layout_marginRight">@dimen/margin_8dp</item>
    </style>

</resources>